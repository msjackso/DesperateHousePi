	PTrait perfectionism = new PTrait(0, 15);
	PTrait tension = new PTrait(0, 16);
	
	// Crust constructor; in this case, will generate a crust with completely random traits
	Crust(){
		Random rand = new Random();
		//For all 16 traits
		for(int i = 1; i <= 16; i++){
			//Get a random integer between -100 and 100
			int newTraitValue = rand.nextInt(201)-100;
			
		}
	}
	
	
